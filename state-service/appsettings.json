{
  "ConnectionStrings": {
    "StateDb": "Host=localhost;Database=state_db;Username=postgres;Password=mysecretpassword"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": ["FromLogContext"],
    "WriteTo": [
      { "Name": "Console", "Args": { "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} pid={Pid} corr={CorrelationId} {Message:lj}{NewLine}{Exception}" } }
    ]
  },
  "Metrics": {
    "EnableConsole": true
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Username": "guest",
    "Password": "guest"
  }
}
